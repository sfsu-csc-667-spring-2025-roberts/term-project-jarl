{
  "name": "term-project-jarl",
  "version": "1.0.0",
  "description": "[![Open in Codespaces](https://classroom.github.com/assets/launch-codespace-2972f46106e565e64193e422d61a12cf1da4916b45550586e14ef0a7c637dd04.svg)](https://classroom.github.com/open-in-codespaces?assignment_repo_id=18470978)",
  "scripts": {
    "start": "ts-node src/server/index.ts",
    "start:dev": "concurrently --names server,frontend -c blue,green \"npm run server:dev\" \"npm run frontend:dev\"",
    "backend:dev": "nodemon --exec ts-node src/server/index.ts --ext ts,ejs,css",
    "server:dev": "nodemon --exec ts-node src/server/index.ts --ext ejs,ts --ignore public",
    "frontend": "webpack --config webpack.config.ts",
    "frontend:dev": "webpack --config webpack.config.ts --mode development --watch",
    "prepare": "husky",
    "db:create": "node-pg-migrate create -j ts --",
    "db:migrate": "ts-node node_modules/node-pg-migrate/bin/node-pg-migrate.js up -j ts -d postgres",
    "db:rollback": "ts-node node_modules/node-pg-migrate/bin/node-pg-migrate.js down -j ts -d postgres",
    "build": "tsc",
    "lint": "prettier --write ./src"
  },
  "dependencies": {
    "@types/socket.io-client": "^3.0.0",
    "bcrypt": "^5.1.1",
    "connect-pg-simple": "^10.0.0",
    "cookie-parser": "^1.4.7",
    "dotenv": "^16.4.7",
    "ejs": "^3.1.10",
    "express": "^4.18.2",
    "express-session": "^1.18.0",
    "http-errors": "^2.0.0",
    "mongoose": "^8.14.2",
    "morgan": "^1.10.0",
    "node-pg-migrate": "^7.9.1",
    "nodemailer": "^6.10.1",
    "pg": "^8.11.3",
    "pg-promise": "^11.5.4",
    "socket.io": "^4.7.2",
    "socket.io-client": "^4.7.2",
    "uuid": "^9.0.1"
  },
  "devDependencies": {
    "@types/bcrypt": "^5.0.0",
    "@types/connect-livereload": "^0.6.3",
    "@types/connect-pg-simple": "^7.0.3",
    "@types/cookie-parser": "^1.4.3",
    "@types/express": "^4.17.17",
    "@types/express-session": "^1.17.7",
    "@types/http-errors": "^2.0.1",
    "@types/livereload": "^0.9.5",
    "@types/morgan": "^1.9.4",
    "@types/node": "^18.15.11",
    "@types/nodemailer": "^6.4.9",
    "@types/pg": "^8.10.2",
    "@types/uuid": "^9.0.2",
    "@types/webpack": "^5.28.1",
    "concurrently": "^8.2.1",
    "connect-livereload": "^0.6.1",
    "husky": "^8.0.3",
    "lint-staged": "^14.0.1",
    "livereload": "^0.9.3",
    "nodemon": "^3.0.1",
    "prettier": "^3.0.3",
    "ts-loader": "^9.4.4",
    "ts-node": "^10.9.1",
    "typescript": "^5.1.6",
    "webpack": "^5.88.2",
    "webpack-cli": "^5.1.4"
  }
}
