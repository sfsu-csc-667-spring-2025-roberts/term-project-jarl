<!DOCTYPE html>
<html lang="en">
<head>
  <%- include('./shared/head.ejs', { title: 'Poker Game' }) %>
  <link rel="stylesheet" href="/css/games.css">
</head>
<body data-user-id="<%= user ? user.id : '' %>" data-game-id="<%= game ? game.id : '' %>" data-username="<%= user ? user.username : '' %>">
  <%- include('./shared/menu.ejs') %>
  
  <div class="container">
    <div class="game-container">
      <div class="game-header">
        <h1><%= game.name %></h1>
        <div class="game-actions">
          <% if (game.created_by === user.id && game.state === 'waiting') { %>
            <button id="start-game" class="btn btn-success">Start Game</button>
          <% } %>
          <button id="leave-game-btn" class="btn btn-danger">Leave Game</button>
        </div>
      </div>
      
      <div id="game-board" data-game-id="<%= game.id %>" data-user-id="<%= user.id %>">
        <div class="table">
          <div class="top-row">
            <div class="player-position" data-seat="0"></div>
            <div class="player-position" data-seat="1"></div>
            <div class="player-position" data-seat="2"></div>
          </div>
          
          <div class="middle-row">
            <div class="player-position" data-seat="7"></div>
            <div class="center-area">
              <div id="community-cards" class="community-cards"></div>
              <div id="pot" class="pot">Pot: 0 chips</div>
            </div>
            <div class="player-position" data-seat="3"></div>
          </div>
          
          <div class="bottom-row">
            <div class="player-position" data-seat="6"></div>
            <div class="player-position" data-seat="5"></div>
            <div class="player-position" data-seat="4"></div>
          </div>
        </div>
        
        <div class="player-area">
          <div id="player-hand" class="player-hand"></div>
          <div id="action-buttons" class="action-buttons">
            <div class="waiting-message">Waiting for game to start...</div>
            <button id="check-btn" class="btn btn-secondary" style="display: none;">Check</button>
            <button id="call-btn" class="btn btn-primary" style="display: none;">Call</button>
            <button id="fold-btn" class="btn btn-danger" style="display: none;">Fold</button>
            <button id="bet-btn" class="btn btn-success" style="display: none;">Bet</button>
            <button id="raise-btn" class="btn btn-warning" style="display: none;">Raise</button>
            <button id="all-in-btn" class="btn btn-dark" style="display: none;">All In</button>
            <input type="number" id="bet-amount" class="form-control" placeholder="Amount" style="display: none;">
          </div>
        </div>
      </div>
      
      <div class="chat-box">
        <div id="chat-messages" class="chat-messages"></div>
        <div class="chat-input-area">
          <form id="chat-form" class="d-flex">
            <input type="text" id="chat-input" class="form-control" placeholder="Type a message..." />
            <button type="submit" class="btn btn-primary">Send</button>
          </form>
        </div>
      </div>
    </div>
  </div>
  
  <!-- Socket.io Client -->
  <script src="/socket.io/socket.io.js"></script>
  
  <!-- Bootstrap JS -->
  <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.1.3/dist/js/bootstrap.bundle.min.js"></script>
  
  <!-- Our Compiled JS - Single entry point -->
  <script src="/js/main.js"></script>
</body>
</html>